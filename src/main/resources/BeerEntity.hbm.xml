<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.grandcircus.spring.models.BeerEntity" table="beer" schema="beer">
        <id name="beerId">
            <column name="beerID" sql-type="int(11)"/>
        </id>
        <property name="beerName">
            <column name="beerName" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="location">
            <column name="location" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="beerType">
            <column name="beerType" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="beerFlavors">
            <column name="beerFlavors" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
        <property name="brewer">
            <column name="brewer" sql-type="varchar(45)" length="45" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>